# DocVector Environment Configuration

# Application
DOCVECTOR_APP_VERSION=0.1.0
DOCVECTOR_ENVIRONMENT=development
DOCVECTOR_LOG_LEVEL=INFO

# API Server
DOCVECTOR_API_HOST=0.0.0.0
DOCVECTOR_API_PORT=8000
DOCVECTOR_API_RELOAD=true

# Database
# Using PostgreSQL (recommended)
DOCVECTOR_DATABASE_URL=postgresql+asyncpg://docvector:docvector@localhost:5434/docvector

# Alternative: SQLite for simple testing (not recommended for production)
# DOCVECTOR_DATABASE_URL=sqlite+aiosqlite:///./docvector.db

# Redis
DOCVECTOR_REDIS_URL=redis://localhost:6380/0
DOCVECTOR_REDIS_MAX_CONNECTIONS=10

# Qdrant Vector Database
DOCVECTOR_QDRANT_HOST=localhost
DOCVECTOR_QDRANT_PORT=6335
DOCVECTOR_QDRANT_GRPC_PORT=6336
DOCVECTOR_QDRANT_USE_GRPC=false
DOCVECTOR_QDRANT_COLLECTION=documents

# Embeddings
# Provider: 'local' (sentence-transformers) or 'openai'
DOCVECTOR_EMBEDDING_PROVIDER=local
DOCVECTOR_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
DOCVECTOR_EMBEDDING_CACHE_ENABLED=true

# For OpenAI embeddings (uncomment if using OpenAI)
# DOCVECTOR_EMBEDDING_PROVIDER=openai
# DOCVECTOR_EMBEDDING_MODEL=text-embedding-3-small
# DOCVECTOR_OPENAI_API_KEY=your-api-key-here

# Search Configuration
DOCVECTOR_SEARCH_MIN_SCORE=0.7
DOCVECTOR_SEARCH_VECTOR_WEIGHT=0.7
DOCVECTOR_SEARCH_KEYWORD_WEIGHT=0.3

# Text Chunking
DOCVECTOR_CHUNK_SIZE=1000
DOCVECTOR_CHUNK_OVERLAP=200

# Web Crawler
DOCVECTOR_CRAWLER_MAX_DEPTH=3
DOCVECTOR_CRAWLER_MAX_PAGES=100
DOCVECTOR_CRAWLER_CONCURRENT_REQUESTS=5
DOCVECTOR_CRAWLER_USER_AGENT=DocVector/0.1.0 (https://github.com/docvector/docvector)

# CORS (comma-separated list of origins)
# DOCVECTOR_CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
